<%= render(partial: 'layouts/page_header', locals: {
  icon: 'users',
  title: 'Equipes',
  subtitle: 'Nova'
}); %>

<div class="container page-container">
  <div class="columns">
    <div class="column is-one-third">
      <%= form_for @squad, url: { action: 'create' } do |f| %>
        <div class="field">
          <%= f.label 'Nome da Equipe', class: 'label' %>
          <p class="control">
            <%= f.text_field :name, class: 'input' %>
          </p>
        </div>

        <%= f.submit 'Criar Equipe', class: 'button is-primary is-rounded' %>
      <% end %>
    </div>
  </div>
</div>
