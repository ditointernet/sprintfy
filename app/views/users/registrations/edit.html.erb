<%= render(partial: 'layouts/page_header', locals: {
  icon: 'user-circle',
  title: 'Minha conta',
  subtitle: "Mudar senha"
}); %>

<div class="container page-container">
  <div class="columns">
    <div class="column is-half">
      <%= form_for(@user, url: user_registration_path, html: { method: :patch }) do |f| %>
        <div class="field">
          <p class="control">
            <%= f.label 'Senha Antiga', class: 'label' %>
            <%= f.password_field :current_password, autocomplete: 'off', class: 'input' %>
          </p>
        </div>

        <div class="field">
          <p class="control">
            <%= f.label 'Nova Senha', class: 'label' %>
            <%= f.password_field :password, autocomplete: 'off', class: 'input' %>
          </p>
        </div>

        <div class="field">
          <p class="control">
            <%= f.label 'Confirmar Senha', class: 'label' %>
            <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'input' %>
          </p>
        </div>

        <%= f.submit 'Salvar', class: 'button is-primary is-rounded' %>
      <% end %>
    </div>
  </div>
</div>
