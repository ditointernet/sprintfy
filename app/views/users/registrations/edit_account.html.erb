<%= render(partial: 'layouts/page_header', locals: {
  icon: 'user-circle',
  title: 'Conta',
  subtitle: "Editar conta"
}); %>

<div class="container page-container">
  <div class="columns">
    <div class="column is-half">
      <%= form_for(@user, url: user_registration_path, html: { method: :patch }) do |f| %>

        <div class="field">
          <p class="control">
            <%= f.label 'Nome', class: 'label' %>
            <%= f.text_field :name, autocomplete: 'off', class: 'input' %>
          </p>
        </div>

        <div class="field">
          <p class="control">
            <%= f.label 'E-mail', class: 'label' %>
            <%= f.text_field :email, autocomplete: 'off', class: 'input' %>
          </p>
        </div>

        <%= f.submit 'Salvar', class: 'button is-primary is-rounded' %>
      <% end %>
    </div>
  </div>
</div>
