<%
  icon = icon.present? ? icon : ''
  title = title.present? ? title : ''
  subtitle = subtitle.present? ? subtitle : ''
%>
<header class="hero is-link page-header">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <div class="icon">
          <i class="fa fa-<%= icon.html_safe %>"></i>
        </div>
        <%= title.html_safe %>
      </h1>
      <h2 class="subtitle">
        <%= subtitle.html_safe %>
      </h2>
    </div>
  </div>
</header>